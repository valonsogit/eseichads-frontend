---
import { Image, Picture } from "@astrojs/image/components";
import headerLogo from "./images/logo.png";
import NavMenu from "./vue/NavMenu.vue";
export interface Props {
    currentUrl: string;
}
const response = await fetch(`${import.meta.env.STRAPI_URL}/top-level-pages`, {
    method: "GET",
    headers: {
        "Content-Type": "application/json",
        Authorization: "Bearer " + import.meta.env.STRAPI_TOKEN,
    },
});

const { data: topPages, meta } = await response.json();
console.log(topPages);

const { currentUrl } = Astro.props;
---

<div
    class="flex w-full p-4 md:p-3 md:pl-8 h-[4.5rem] gap-4 bg-gradient-to-r from-[#313b41] to-[#46b396] sticky top-0 z-10 items-center text-white font-bold text-xl"
>
    <NavMenu client:load class="md:hidden" />
    <Image
        alt="Gopodo FormaciÃ³n"
        src={headerLogo}
        class="object-contain w-auto h-full"
        aspectRatio="1:1"
    />
    <span>ESEIChads</span>
    <nav>
        {
            topPages.map((page: TopLevelPage) => (
                <a href={page.slug} 
                class={page.slug == currentUrl? "text-red"}>
                    {page.title}
                </a>
            ))
        }
    </nav>
</div>
